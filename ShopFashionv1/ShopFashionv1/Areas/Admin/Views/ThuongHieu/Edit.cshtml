@model Model.EF.Hang
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
<div class="row-fluid sortable">
    <div class="box span6">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon white edit"></i><span class="break"></span>Sửa Thương Hiệu</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
        <div class="box-content">

            @using (Html.BeginForm("Edit", "ThuongHieu", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x=>x.MaHang)
                @Html.ValidationSummary(false, "", "error")

                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="disabledInput">Tên Thương Hiệu</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.TenHang, new { @class = "input-xlarge focused", @id = "focusedInput", @type = "text" })
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </fieldset>
            }
        </div>
    </div><!--/span-->
</div>