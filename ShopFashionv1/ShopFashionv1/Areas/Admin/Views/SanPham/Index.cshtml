@model List<Model.EF.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header
{
    Quản Lý Sản Phẩm
}
@section jsfooter
{
    <script src="/assets/admin/js/jquery.unobtrusive-ajax.js"></script>
}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon white user"></i><span class="break"></span>Sản Phẩm</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        
                        <th>Tên Sản Phẩm</th>
                        <th>Giá Sản Phẩm</th>
                        <th>Giá Khuyến Mại</th>
                        <th>Ngày Cập Nhật</th>
                        <th>Mô Tả</th>
                        <th>Hình Ảnh</th>
                        <th>Số Lượng</th>
                        <th>Mã Danh Mục SP</th>
                        <th>Mã Thương Hiệu</th>
                        <th>Mã Bộ Sưu Tập</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.MaSP">
                            
                            <td class="center">@item.TenSP</td>
                            <td class="center">@item.GiaSP</td>
                            <td class="center">@item.GiaKhuyenMai</td>
                            <td class="center">@item.NgayCapNhat</td>
                            <td class="center">@item.MoTa</td>
                            <td class="center"><img src="@item.HinhAnhSP" width="100" height="80"/></td>
                            <td class="center">@item.SoLuong</td>
                            <td class="center">@item.MaDanhMucSP</td>
                            <td class="center">@item.MaHang</td>
                            <td class="center">@item.MaBST</td>
                            <td class="center">
                                <a class="btn btn-info" href="/Admin/SanPham/Edit/@item.MaSP">
                                    <i class="halflings-icon white edit"></i>
                                </a>
                                @Ajax.ActionLink("Xóa", "Delete", new { @id = item.MaSP }, new AjaxOptions
                           {
                               Confirm = "Bạn có muốn xóa ?",
                               OnComplete = "$('#row_" + item.MaSP + "').remove()",
                               HttpMethod = "Delete"
                           }, new { @class = "btn btn-danger halflings-icon white trash" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <a class="btn btn-info" href="/Admin/SanPham/Create">

                Thêm Mới

            </a>
        </div>
    </div><!--/span-->

</div>
