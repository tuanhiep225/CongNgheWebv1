@model Model.EF.HinhAnh
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section jsfooter
{
    <script>
        $('#uploadanh').on('click', function (e) {
            e.preventDefault;
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#anh').val(url);
            };
            finder.popup();
        })
    </script>
}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon white edit"></i><span class="break"></span>Chỉnh Sửa Hình Ảnh</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
        <div class="box-content">

            @using (Html.BeginForm("Edit", "HinhAnh", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model=>model.MaHinhAnh)
                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="disabledInput">Đường Dẫn</label>
                        <div class="controls">
                            @Html.TextBoxFor(model => model.TenHinhAnh, new { @class = "input-xlarge focused", @id = "anh", @type = "text" })
                            <a id="uploadanh" href="#">Chọn Ảnh</a>
                            @Html.ValidationMessageFor(model => model.TenHinhAnh, "", new { @class = "text-error" })
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="disabledInput">Sản Phẩm</label>
                        <div class="controls">
                            @Html.DropDownListFor(model => model.MaSP, null, new { @class = "input-xlarge focused", @id = "focusedInput", @type = "text" })

                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </fieldset>
            }
        </div>
    </div><!--/span-->

</div><!--/row-->
