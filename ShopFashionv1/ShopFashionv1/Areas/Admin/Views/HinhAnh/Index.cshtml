@model List<Model.EF.HinhAnh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header
{
    Quản Lý Hình Ảnh Sản Phẩm
}
@section jsfooter
{
    <script src="/assets/admin/js/jquery.unobtrusive-ajax.js"></script>
}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon white user"></i><span class="break"></span>Quản Lý Hình Ảnh Sản Phẩm</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Mã Hình Ảnh</th>
                        <th>Đường Dẫn</th>
                        <th>Mã Sản Phẩm</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.MaHinhAnh">
                            <td>@item.MaHinhAnh</td>
                            <td class="center">@item.TenHinhAnh</td>
                            <td class="center">@item.MaSP</td>


                            <td class="center">
                                <a class="btn btn-info" href="/Admin/HinhAnh/Edit/@item.MaHinhAnh">
                                    <i class="halflings-icon white edit"></i>
                                </a>
                                @Ajax.ActionLink("Xóa", "Delete", new { @id = item.MaHinhAnh }, new AjaxOptions
                           {
                               Confirm = "Bạn có muốn xóa ?",
                               OnComplete = "$('#row_" + item.MaHinhAnh + "').remove()",
                               HttpMethod = "Delete"
                           }, new { @class = "btn btn-danger halflings-icon white trash" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <a class="btn btn-info" href="/Admin/HinhAnh/Create">

                Thêm Mới

            </a>
        </div>
    </div><!--/span-->

</div>

