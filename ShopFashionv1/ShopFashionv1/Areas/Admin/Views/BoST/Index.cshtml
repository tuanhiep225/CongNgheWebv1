@model List<Model.EF.BoSuuTap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header
{
    Quản Lý Bộ Sưu Tập
}
@section jsfooter
{
    <script src="/assets/admin/js/jquery.unobtrusive-ajax.js"></script>
}
<div class="row-fluid sortable">
    <div class="box span8">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon white user"></i><span class="break"></span>Quản Lý Bộ Sưu Tập</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Mã BST</th>
                        <th>Tên BST</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.MaBST">
                            <td>@item.MaBST</td>
                            <td class="center">@item.TenBST</td>
                            <td class="center">
                                <a class="btn btn-info" href="/Admin/BoST/Edit/@item.MaBST">
                                    <i class="halflings-icon white edit"></i>
                                </a>
                               @Ajax.ActionLink("Xóa", "Delete", new { @id = item.MaBST }, new AjaxOptions
                          {
                              Confirm="Bạn có muốn xóa",
                              OnComplete= "$('#row_" + item.MaBST + "').remove()",
                              HttpMethod = "Delete"
                          }, new { @class = "btn btn-danger halflings-icon white trash" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <a class="btn btn-info" href="/Admin/BoST/Create">

                Thêm Mới

            </a>
        </div>
    </div><!--/span-->

</div>
